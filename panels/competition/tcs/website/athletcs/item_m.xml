<!-- NOTE: The property 'usoc' used on elements tells the panel to recolour them based on object colours -->
<panel navigation_focus_target="true">
	<layout class="stick_to_sides_attachment" apply_to_children="true"/>

	<container class="main_box">
		<attachment_group class="horizontal_arrange" horizontal_alignment="right,extend"/>
		
		<container>
			<attachment_group class="vertical_arrange" vertical_alignment="middle" vertical_gap="-2"/>
		
			<record id="default_properties" style="bold" multiline="true" auto_size="vertical" font="webtitle"/>
		
			<!-- Main object -->
			<!-- Story title (max 2 lines of text)-->
			<widget class="text" id="brif" size="small" colour="faded text"/>
			<widget class="text" id="titl" colour="website headline" size="large"/>
			<widget class="text" id="date" alignment="left,bottom" colour="faded text" size="xxsmall" multiline="false"/>
		</container>

		<container width="150">
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>
	
			<container>
				<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" offset="0"/>
				<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

				<!-- News image -->
				<container id="CNdi" height="90">
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
				</container>
			</container>
		</container>
	</container>

</panel>