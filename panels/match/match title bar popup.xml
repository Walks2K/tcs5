<panel>
	<attachment_group class="vertical_arrange_autosize" vertical_gap="-4"/>

	<container height="30">
		<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0"/>
		<layout class="arrange_horizontal_attachment" alignment="middle" offset="0" gap="4"/>
		<!-- home result type-->
		<widget class="label" id="hpen" width="20" font="bold" size="xlarge" colour="positive" alignment="right,centre_y"/>
		<!--scoreboard-->
		<widget class="text" id="Scor" auto_size="horizontal" format="[%scoreline#1-result_h_a_result]" size="16" alignment="centre" font="bold" colour="text"/>
		<!-- away result type-->
		<widget class="label" id="apen" width="20" font="bold" size="xlarge" colour="positive" alignment="left,centre_y"/>
	</container>
	
	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="0"/>
		<!--HT score-->
		<widget class="text" id="Httt" alignment="top" auto_size="vertical" colour="faded text" size="small"/>
		<!--aggregate score-->
		<widget class="text" id="Aggg" alignment="centre" auto_size="vertical" font="title" colour="text"/>
	</container>

</panel>