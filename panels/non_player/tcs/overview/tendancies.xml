<panel>
	<layout class="stick_to_sides_attachment" apply_to_children="true"/>

	<!-- Property setting the path to use for 'high' tendencies (>10) -->
	<string id="higT" value="icons/16px/tendency up"/>

	<!-- Property setting the path to use for 'low' tendencies (<=10) -->
	<string id="lowT" value="icons/16px/tendency down"/>

	<container class="scrolling_box">

		<container class="titled_box">
			<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="fill" horizontal_offset="8"/>
		
			<translation id="title" translation_id="293311" type="use"/>
		
			<!-- TENDS TO -->
			<container>
				<attachment_group class="vertical_arrange_autosize"/>
		
				<widget class="label" font="fonts/title" colour="accent" auto_size="vertical">
					<translation id="text" translation_id="395653" type="use"/>
				</widget>
									
				<!-- TABLE -->
				<widget class="table" id="tend" mode="fill_rows,stripe_rows" layout="-1" auto_size_rows="true" fixed_size_rows="false" default_sort_column="pict" row_spacing="4" auto_size="vertical">
					<list id="column_widget_properties">
						<record index="0" alignment="left,centre_y"/>
					</list>
					<list id="column_table_properties">
						<record index="0" id="pict" sort_disabled="true" left="0"/>
					</list>
				</widget>
			</container>

			<!-- TENDS NOT TO -->
			<container>
				<attachment_group class="vertical_arrange_autosize"/>
		
				<widget class="label" font="fonts/title" colour="accent" auto_size="vertical">
					<translation id="text" translation_id="395652" type="use"/>
				</widget>
									
				<!-- TABLE -->
				<widget class="table" id="nten" mode="fill_rows,stripe_rows" layout="-1" auto_size_rows="true" fixed_size_rows="false" default_sort_column="pict" row_spacing="4" auto_size="vertical">
					<list id="column_widget_properties">
						<record index="0" alignment="left,centre_y"/>
					</list>
					<list id="column_table_properties">
						<record index="0" id="pict" sort_disabled="true" left="4"/>
					</list>
				</widget>
			</container>
		
		</container>

	</container>
</panel>